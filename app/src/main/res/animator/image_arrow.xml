<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <objectAnimator
            android:duration="1000"
            android:propertyName="alpha"
            android:valueTo="1dp"
            android:valueType="floatType" />
    </item>

    <item>
        <objectAnimator
            android:duration="1000"
            android:propertyName="alpha"
            android:valueTo="0dp"
            android:valueType="floatType" />
    </item>
</selector>